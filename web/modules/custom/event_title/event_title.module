<?php

/**
 * Implements hook_entity_presave().
 */
function event_title_entity_presave($entity) {
  switch ($entity->bundle()) {
    case 'event':
      $casedTitle = \Drupal::service('event_title.custom_services')->titleCase($entity);
      $entity->setTitle($casedTitle);
      break;
  }
}

